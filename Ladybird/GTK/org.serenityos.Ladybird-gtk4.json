{
    "app-id": "org.serenityos.Ladybird-gtk4",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "Ladybird",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--socket=session-bus"
    ],
    "cleanup": [
        "blueprint*",
        "/lib/python3*",
        "/share/Caches*"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "tag": "v0.10.0"
                }
            ]
        },
        {
            "name": "ladybird-data",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r Caches /app/share/Caches"
            ],
            "sources": [
                 {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/publicsuffix/list/master/public_suffix_list.dat",
                    "dest": "Caches/PublicSuffix/",
                    "sha256": "d68c0cb4d0d90683201d47b6ed4b95a1cd9a91f6906e240b6b5387d056da1ab6"
                },
                {
                    "type": "file",
                    "url": "https://www.unicode.org/Public/idna/15.1.0/IdnaMappingTable.txt",
                    "dest": "Caches/UCD/",
                    "sha256": "402cbd285f1f952fcd0834b63541d54f69d3d8f1b8f8599bf71a1a14935f82c4"
                },
                {
                    "type": "archive",
                    "url": "https://www.unicode.org/Public/15.1.0/ucd/UCD.zip",
                    "dest": "Caches/UCD/",
                    "sha256": "cb1c663d053926500cd501229736045752713a066bd75802098598b7a7056177",
                    "strip-components": 0,
                    "dest-filename": "UCD.zip"
                },
                {
                    "type": "file",
                    "url": "https://www.unicode.org/Public/emoji/15.1/emoji-test.txt",
                    "dest": "Caches/UCD/",
                    "sha256": "d876ee249aa28eaa76cfa6dfaa702847a8d13b062aa488d465d0395ee8137ed9"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/unicode-org/cldr-json/releases/download/44.0.1/cldr-44.0.1-json-modern.zip",
                    "dest": "Caches/CLDR/",
                    "sha256": "6daf783158fb3b09aa026a048e1f5ed5773148387b1edadfad33f303371f332a",
                    "strip-components": 0,
                    "dest-filename": "cldr.zip"
                },
                {
                    "type": "archive",
                    "url": "https://data.iana.org/time-zones/releases/tzdata2023c.tar.gz",
                    "dest": "Caches/TZDB/",
                    "sha256": "3f510b5d1b4ae9bb38e485aa302a776b317fb3637bdb6404c4adf7b6cadd965c",
                    "strip-components": 0,
                    "dest-filename": "tzdb.tar.gz"
                },
                {
                    "type": "file",
                    "url": "https://curl.se/ca/cacert-2023-12-12.pem",
                    "dest": "Caches/CACERT/",
                    "sha256": "ccbdfc2fe1a0d7bbbb9cc15710271acf1bb1afe4c8f1725fe95c4c7733fcbe5a"
                },
                {
                    "type": "shell",
                    "commands": [
                        "echo -n 15.1.0 > Caches/UCD/version.txt",
                        "echo -n 44.0.1 > Caches/CLDR/version.txt",
                        "echo -n 2023c > Caches/TZDB/version.txt",
                        "echo -n 2023-12-12 > Caches/CACERT/version.txt"
                    ]
                }
            ]
        },
        {
            "name": "Ladybird",
            "buildsystem": "cmake-ninja",
            "subdir": "Ladybird",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "../..",
                    "skip": [ "Toolchain", "Build", "Tests/LibWeb/WPT", "out", "build" ]
                }
            ],
            "config-opts": [ "-DENABLE_GTK=ON", "-DENABLE_NETWORK_DOWNLOADS=OFF", "-DENABLE_COMMONMARK_SPEC_DOWNLOAD=OFF", "-DSERENITY_CACHE_DIR=/app/share/Caches" ]
        }
    ]
}
